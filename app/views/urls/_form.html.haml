= form_for @url do |f|
  -if @url.errors.any?
    #error_explanation
      %h2= "#{pluralize(@url.errors.count, "error")} prohibited this url from being saved:"
      %ul
        - @url.errors.full_messages.each do |msg|
          %li= msg

  .clearfix
    = f.label :url
    .input
      = f.text_field :url
  .clearfix
    = f.label :description
    .input
      = f.text_field :description
  .form-actions
    = f.submit 'Save', :class => "btn btn-primary"
    = f.submit 'Save and Insert', :class => "btn btn-primary"
