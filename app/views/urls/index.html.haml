- content_for :page_header do
  %h1 Listing urls
= link_to 'New Url', new_url_path, :class => "btn btn-primary"
%br
%br
%table{:class => "table table-striped table-bordered table-condensed", :id => "sortableTable"}
  %thead
    %tr
      %th{:class => "header blue", :style => "width:700px"}= "Url"
      %th{:class => "header yellow", :style => "width:400px"}= "Description"
      %th
      %th
      %th
  %tbody
    - @urls.each do |url|
      %tr
        %td{:style => "word-wrap: break-word; max-width:300px;"}
          = link_to url.url, url.url
        %td= url.description
        %td= link_to 'Show', url, :class => "btn btn-primary btn-mini"
        %td= link_to 'Edit', edit_url_path(url), :class => "btn btn-primary btn-mini"
        %td= link_to 'X', url, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-primary btn-mini"

= link_to 'New Url', new_url_path, :class => "btn btn-primary"
:javascript
  $(function() {
    $("table#sortableTable").tablesorter({
      widgets: ["saveSort"],
      headers: {
        2: {sorter: false},
        3: {sorter: false},
        4: {sorter: false}
      }
    });
   });