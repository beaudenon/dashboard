= form_for @type do |f|
  -if @type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@type.errors.count, "error")} prohibited this type from being saved:"
      %ul
        - @type.errors.full_messages.each do |msg|
          %li= msg

  .clearfix
    = f.label :name
    .input
      = f.text_field :name
  .clearfix
    = f.label :position
    .input
      = f.text_field :position
  .clearfix
    = f.label :color
    .input
      = f.text_field :color
  .form-actions
    = f.submit 'Save', :class => "btn btn-primary"
