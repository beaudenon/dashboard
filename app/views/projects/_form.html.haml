= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .clearfix
    = f.label :name
    .input
      = f.text_field :name
  .clearfix
    = f.label :title
    .input
      = f.text_field :title
  .clearfix
    = f.label :description
    .input
      = f.text_field :description
  .form-actions
    = f.submit 'Save', :class => "btn btn-primary", :class => "btn btn-primary"
